<%= form_with(model: client_legal_form) do |form| %>
  <% if client_legal_form.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client_legal_form.errors.count, "error") %> prohibited this client_legal_form from being saved:</h2>

      <ul>
        <% client_legal_form.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :client_id, style: "display: block" %>
    <% if @client_dropdown %>
      <%= form.select :client_id, @client_dropdown.unshift(['--Select a Client--', 0]) %>
    <% end %>
    <% if @client %>
      <div class="py-2"><%=@client.last_name %>, <%=@client.first_name %> <%=@client.middle_name %></div>
      <%= form.hidden_field :client_id, value: @client.id %>
    <% end %>
  </div>

  <div>
    <%= form.label :legal_form_id, style: "display: block" %>
    <%= form.select :legal_form_id, @legal_form_dropdown.unshift(['--Select a Form--', 0]) %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
