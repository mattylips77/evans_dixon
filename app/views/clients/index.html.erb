<p style="color: green"><%= notice %></p>

<h1>Clients</h1>

<div id="client_legal_forms" class="grid grid-cols-2 w-3/5 border border-slate-300 border-solid">
  <div class="font-bold">Name</div>
  <div></div>
  <% bg_color = "bg-slate-100" %>
  <% @clients.each.with_index do |client, index| %>
    <% bg_color = index.even? ? "bg-slate-50" : "bg-slate-200"  %>
    <div class="py-2 pl-2 <%=bg_color%>"><%=client.last_name %>, <%=client.first_name %> <%=client.middle_name %></div>
    <div class="py-2 pr-2 <%=bg_color%>">
      <%= link_to "Edit this client", edit_client_path(client.id) %> |
      <%= link_to "View Clients Forms", forms_by_client_client_legal_form_path(client.id) %> |
      <%= link_to "Add Form", new_for_client_client_legal_form_path(client.id) %>
    </div>
  <% end %>
</div>

<%= link_to "New client", new_client_path %>
