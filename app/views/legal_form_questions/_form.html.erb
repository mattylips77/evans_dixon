<%= form_with(model: legal_form_question) do |form| %>
  <% if legal_form_question.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(legal_form_question.errors.count, "error") %> prohibited this legal_form_question from being saved:</h2>

      <ul>
        <% legal_form_question.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :legal_form_id, style: "display: block" %>
    <%= form.select :legal_form_id, @legal_form_dropdown.unshift(['--Select a Form--', 0]) %>
  </div>

  <div>
    <%= form.label :question, style: "display: block" %>
    <%= form.text_field :question %>
  </div>

  <div>
    <%= form.label :position, style: "display: block" %>
    <%= form.number_field :position %>
  </div>

  <div>
    <%= form.label :question_type, style: "display: block" %>
    <%= form.select :question_type, ['Text', 'Dropdown', 'Checkbox']%>
  </div>

  <div>
    <%= form.label :options, style: "display: block" %>
    <%= form.text_field :options %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
